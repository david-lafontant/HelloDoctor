<div class="col col-md-6">
  <%= form_with(model: patient) do |form| %>
    <% if patient.errors.any? %>
      <div class="text-danger">
        <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>
        <ul>
          <% patient.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="mb-3">
      <%= form.label :first_name, class: "form-label" %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :last_name, class: "form-label" %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :birthdate, class: "form-label" %>
      <%= form.date_field :birthdate, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :sex, class: "form-label" %>
      <%= form.select :sex, Patient.sexes.keys, { prompt: 'Add patient sex' }, class: "form-select" %>
    </div>
    <div class="mb-3">
      <%= form.label :address_line1, class: "form-label" %>
      <%= form.text_field :address_line1, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :address_line2, class: "form-label" %>
      <%= form.text_field :address_line2 , class: "form-control"%>
    </div>
    <div class="mb-3">
      <%= form.label :city, class: "form-label" %>
      <%= form.text_field :city, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :state, class: "form-label" %>
      <%= form.text_field :state , class: "form-control"%>
    </div>
    <div class="mb-3">
      <%= form.label :country, class: "form-label" %>
      <%= form.text_field :country, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :phone, class: "form-label" %>
      <%= form.number_field :phone, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.submit class: "btn btn-primary"%>
    </div>
  <% end %>
</div>