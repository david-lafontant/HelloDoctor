<section class="ftco-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section">Hello Doctor</h2>
      </div>
    </div>
    <div class="row justify-content-center contour py-3">
      <div class="col-md-7 col-lg-5 ">
        <div class="login-wrap p-4 p-md-5">
          <div class="icon d-flex align-items-center justify-content-center">
            <span class="bi bi-person-circle"></span>
          </div>
          <h3 class="text-center mb-4">Sign In</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>
            <div class="form-group mb-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"email", class:"form-control rounded-left" %>
            </div>
            <div class="form-group d-flex mb-3">
              <%= f.password_field :password, autocomplete: "current-password",  class: "form-control rounded-left", placeholder:"Password"  %>
            </div>
            <div class="form-group mb-3">
              <%= f.submit "Log in" ,class: "form-control btn btn-primary rounded submit px-3" %>
            </div>
            <div class="form-group d-md-flex flex-column mb-3">
              <% if devise_mapping.rememberable? %>
                <div class="w-50 mb-3">
                  <%= f.label :remember_me, class:"checkbox-wrap checkbox-primary" %>
                  <%= f.check_box :remember_me %>
                  <span class="checkmark"></span>
                </div>
              <% end %>
              <div class="w-100 text-md-right">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
